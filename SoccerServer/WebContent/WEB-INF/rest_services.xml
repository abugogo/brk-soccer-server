<?xml version="1.0" encoding="UTF-8"?>
<services>
    <entity>
        <uri>players/*</uri>
        <method>GET</method>
        <class>com.soccer.actions.players.GetPlayerAction</class>
    </entity>
    <entity>
        <uri>players</uri>
        <method>GET</method>
        <class>com.soccer.actions.players.GetPlayersAction</class>
    </entity>
    <entity>
        <uri>players</uri>
        <method>PUT</method>
        <class>com.soccer.actions.players.CreatePlayerAction</class>
    </entity>
    <entity>
        <uri>players/*</uri>
        <method>POST</method>
        <class>com.soccer.actions.players.UpdatePlayerAction</class>
    </entity>
    <entity>
        <uri>players/*/stats</uri>
        <method>GET</method>
        <class>com.soccer.actions.players.stats.GetPlayerStatsAction</class>
    </entity>
    <entity>
        <uri>games/*</uri>
        <method>GET</method>
        <class>com.soccer.actions.games.GetGameAction</class>
    </entity>
    <entity>
        <uri>games</uri>
        <method>GET</method>
        <class>com.soccer.actions.games.GetGamesAction</class>
    </entity>
    <entity>
        <uri>games</uri>
        <method>PUT</method>
        <class>com.soccer.actions.games.CreateGameAction</class>
    </entity>
    <entity>
        <uri>images</uri>
        <method>POST</method>
        <class>com.soccer.actions.images.SaveImageAction</class>
    </entity>
    <entity>
        <uri>images/*</uri>
        <method>PUT</method>
        <class>com.soccer.actions.images.SaveImageAction</class>
    </entity>
    <entity>
        <uri>images/*</uri>
        <method>GET</method>
        <class>com.soccer.actions.images.GetImageAction</class>
    </entity>
</services>